PORT=5002
NODE_ENV=development
LOG_LEVEL=info

# MCP TVC Docs Server Configuration
# SEED URLs (format: name1|url1|mode1|hours1,name2|url2|mode2|hours2,...)
# navigationMode: "sidebar" | "navbar" | "auto"
SEED_URLS=TVC Classic 2025.4.0|https://products.technia.com/app/docs/tvc-documentation-2025.4.0/tvc/install/index.html|navbar|0,TVC Helium 2025.4.0|https://products.technia.com/app/docs/tvc-helium-documentation-2025.4.0/index.html|navbar|0,TIF Classic 2025.4.0|https://products.technia.com/app/docs/tif-documentation-2025.4.0/tif-classic/2025.4.0/main/index.html|sidebar|0,TIF Cloud|https://forseven.tifdemo.technia.cloud/docs/tif-cloud/Current/main/index.html|sidebar|0

# Maximum pages to crawl per seed URL
CRAWL_MAX_PAGES=1000

# Maximum crawl depth from seed URL
CRAWL_MAX_DEPTH=5

# Whether to start indexing on server startup
INIT_ON_START=true

# Path to SQLite database file
DB_PATH=./data/tvc-docs.db

# Number of parsed pages to keep in LRU cache
CACHE_SIZE=100

# MCP server base URL (for SSE transport)
# MCP_URL=http://localhost:3000