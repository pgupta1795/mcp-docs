{
  "name": "@pgupta1795/mcp-docs",
  "type": "module",
  "version": "1.0.1",
  "description": "MCP server for documentation search with web indexing from url",
  "author": "pgupta1795",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pgupta1795/mcp-docs.git"
  },
  "homepage": "https://github.com/pgupta1795/mcp-docs#readme",
  "bugs": {
    "url": "https://github.com/pgupta1795/mcp-docs/issues"
  },
  "keywords": [
    "mcp",
    "server",
    "documentation",
    "search",
    "web-indexing",
    "model-context-protocol",
    "ai",
    "llm"
  ],
  "main": "dist/index.js",
  "bin": {
    "mcp-docs": "./dist/index.js"
  },
  "files": [
    "dist",
    "env.example",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "start": "cross-env NODE_OPTIONS=--max-old-space-size=4096 node dist/index.js",
    "start:stdio": "cross-env TRANSPORT=stdio NODE_OPTIONS=--max-old-space-size=4096 node dist/index.js",
    "dev": "cross-env NODE_OPTIONS=--max-old-space-size=4096 tsx watch src/index.ts",
    "dev:stdio": "cross-env NODE_OPTIONS=--max-old-space-size=4096 TRANSPORT=stdio tsx watch src/index.ts",
    "dev:http": "cross-env NODE_OPTIONS=--max-old-space-size=4096 TRANSPORT=http tsx watch src/index.ts"
  },
  "dependencies": {
    "@hono/mcp": "^0.2.3",
    "@hono/node-server": "^1.19.8",
    "@hono/swagger-ui": "^0.5.3",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.5.0",
    "cheerio": "^1.1.2",
    "crawlee": "^3.8.0",
    "dotenv": "^17.2.3",
    "hono": "^4.11.4",
    "lru-cache": "^10.0.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "turndown": "^7.2.2",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.2",
    "@types/turndown": "^5.0.0",
    "cross-env": "^10.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "sugarss": "^5.0.1"
  }
}
